<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CallAladdin;assembly=CallAladdin"
             x:Class="CallAladdin.App">
	<Application.Resources>
        <ResourceDictionary>
            <Color x:Key="yellow">#EDEF00</Color>
            <Color x:Key="white">#FFFFFF</Color>
            <Color x:Key="orange">#E67721</Color>
            <Color x:Key="lightergrey">#F2FAFA</Color>
            <Color x:Key="lightgrey">#EAECF5</Color>
            <Color x:Key="mediumgrey">#BDBEC2</Color>
            <Color x:Key="darkgrey">#9F9FA1</Color>
            <Color x:Key="darkergrey">#757576</Color>
            <Color x:Key="homeIconBackground">#E7E8EA</Color>
            <Color x:Key="lightOrange">#FFE9A3</Color>
            <Style x:Key="defaultBackground" TargetType="ContentPage" >
                <Setter Property="BackgroundColor" Value="{StaticResource yellow}" />
            </Style>
            <Style x:Key="secondaryBackground" TargetType="ContentPage" >
                <Setter Property="BackgroundColor" Value="{StaticResource lightgrey}" />
            </Style>
            <Style x:Key="tertiaryBackground" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource lightergrey}" />
            </Style>
            <Style TargetType="Button" x:Key="defaultButton">
                <Setter Property="BackgroundColor" Value="{StaticResource orange}" />
                <Setter Property="TextColor" Value="{StaticResource white}" />
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="WidthRequest" Value="100" />
                <Setter Property="HeightRequest" Value="40" />
                <Setter Property="BorderRadius" Value="10" />
            </Style>
            <Style TargetType="Label" x:Key="defaultHeader">
                <Setter Property="BackgroundColor" Value="{StaticResource yellow}" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="HeightRequest" Value="55"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="Large"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>
            <Style TargetType="Label" x:Key="fieldLabel">
                <Setter Property="TextColor" Value="Maroon"/>
                <Setter Property="HorizontalOptions" Value="Start"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>